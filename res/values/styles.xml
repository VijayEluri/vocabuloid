<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="VocabularioTheme" parent="@android:style/Theme.Light">
		<item name="android:progressBarStyleHorizontal">@style/VocabuarioProgressBar</item>
		<item name="android:textSize">16sp</item>
		<item name="android:windowTitleSize">40dip</item>
        <item name="android:windowTitleStyle">@style/VocabularioTitleText</item>
        <item name="android:windowTitleBackgroundStyle">@style/VocabularioTitleBackground</item>
	</style>
	<style name="VocabularioTitleText" parent="android:TextAppearance.WindowTitle">
    	<item name="android:textSize">20dip</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="VocabularioTitleBackground">
        <item name="android:background">#C0ED00</item>
    </style>
    <style name="VocabuarioProgressBar" parent="android:Widget.ProgressBar.Horizontal">
    </style>
    <style name="CodeFont">
    	<item name="android:padding">5dp</item>
    </style>
    <style name="RowFont">
    	<item name="android:background">#DED</item>
    	<item name="android:padding">5dp</item>
        <item name="android:textColor">#02B8EA</item>
    </style>
    <style name="FlashcardFont">
    	<item name="android:textSize">28sp</item>
    </style>
    <style name="FlashcardHeading" parent="FlashcardFont">
    	<item name="android:textStyle">bold</item>
    	<item name="android:textColor">#02B8EA</item>
    </style>
    <style name="FlashcardPageNumber" parent="FlashcardFont">
		<item name="android:textColor">#CCC</item>
    </style>
</resources>